page {
  background-color: #f4f4f4;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  padding: 10rpx 0;
  flex-direction: column;
}

.item_container {
  flex-direction: row;
  width: 100%;
  height: 30pt;
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #d8d8d8;
}

.item_title {
  font-size: 12pt;
  margin-left: 10pt;
  color: #808080;
  align-self: center;
  align-items: center;
}

.input {
  flex: 1;
  align-self: center;
  margin-left: 30pt;
  margin-right: 10pt;
  padding-left: 15rpx;
  padding-bottom: 2pt;
  border-bottom: 1px solid #d8d8d8;
}

.unit_text {
  color: #004986;
  margin: 10pt;
  font-size: 12pt;
  align-self: center;
}

.picker_title {
  font-size: 12pt;
  margin-left: 10pt;
  color: #808080;
  align-self: center;
  align-items: center;
}

.arrow {
  align-self: center;
  width: 10pt;
  height: 14pt;
}

.time_picker {
  background: white;
}

.wx-checkbox-input {
  display: none;
}

.switch {
  height: 48rpx;
  width: 120rpx;
  border-radius: 8rpx;
  margin-left: 30rpx;
  border: 1px solid #004986;
  margin-right: 30rpx;
  background-image: url("http://o7lzjfyxl.bkt.clouddn.com/20170525149571163728749.png");
}

