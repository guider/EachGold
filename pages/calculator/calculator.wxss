.container {
  height: 100%;
  width:100%;
  display: flex;
  padding: 10rpx 0;
  flex-direction: column;
}

.item_container {
  flex-direction: row;
  width: 100%;
  height:30pt;
  background: white;
  display:flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #d8d8d8;
  }

.item_title {
  font-size: 12pt;
  margin-left: 10pt;
  color: #808080;
  align-self: center;
  align-items: center;
  
}

.input { 
  flex: 1;
  align-self: center;
  margin-left: 30pt;
  margin-right: 10pt;
  padding-left: 15rpx;
  align-self: center;
  padding-bottom: 2pt;
  border-bottom: 1px solid #d8d8d8;
}

.unit_text{
  color: #004986;
  margin: 10pt;
  font-size: 12pt;
  align-self: center;
  

}
.picker_title{
  font-size: 12pt;
  margin-left: 10pt;
  color: #808080;
  align-self: center;
  align-items: center;
  

}

.arrow{
  align-self: center;
  width: 10pt; height: 14pt;
}


.time_picker{
   background: white;
}

.wx-checkbox-input{
    display: none;
}

.switch{
  width: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height:40rpx;
  background-image: url("http://cdn-img.easyicon.net/png/11682/1168268.gif");

}
.switch[checked]{
  width: 40rpx;
  height:40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcToz-9yySDAmxi2dg9ILl-dDnOthlO_XM1gF4qOJUPuOCNmdmhW");

}

.bottom_container{
    position: fixed;
    bottom: 0;
    width: 90%;
    margin-bottom: 20rpx;
}